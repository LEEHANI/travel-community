<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.board.repository.UploadFileRepository">

	<insert id="insert" parameterType="uploadFile"
	useGeneratedKeys="true" keyProperty="id">
	INSERT INTO upload_file(file_name, file_path, content_type, size, register_date)
	VALUES(#{fileName}, #{filePath}, #{contentType}, #{size}, NOW())
	</insert>
	
	<select id="findById" resultType="uploadFile">
	SELECT *
	FROM upload_file
	WHERE id = #{id}
	</select>

</mapper>